{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.ts" },
  { "src": "/sitemap\\.xml", "dest": "/api/sitemap.ts" },
  { "src": "/sitemap-news-(\\\\d+)\\\\.xml", "dest": "/api/sitemap-news.ts?page=$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
